@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="container">
  <h2>Client Details</h2>
  <hr />
  <h3>Name: @Html.DisplayFor(model => model.LastName), @Html.DisplayFor(model=> model.FirstName)</h3>
  <h3>Phone Number: @Html.DisplayFor(model => model.PhoneNumber)</h3>
  <h3>Description: @Html.DisplayFor(model => model.Description)</h3>

  <h3>@Html.DisplayNameFor(model => model.Stylist): @Html.DisplayFor(model => model.Stylist.LastName), @Html.DisplayFor(model => model.Stylist.FirstName)</h3>

  <p>@Html.ActionLink("Edit Client", "Edit", new{id = Model.ClientId})</p>
  <p>@Html.ActionLink("Back to list", "Index")</p>
</div>