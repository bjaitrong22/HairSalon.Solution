@{
  Layout= "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<div class="container">
  <h2>Stylist Details</h2>
  <hr />
  <h3>@Html.DisplayNameFor(model => model.LastName): @Html.DisplayFor(model => model.LastName)</h3>

  @if (@Model.Clients.Count == 0)
  {
    <h3>No clients have been added for this stylist yet!</h3>
  }
  else
  {
    <h3>Clients:</h3>
    <ul>
      @foreach (Client client in Model.Clients)
      {
        <li>@Html.ActionLink($"{client.FirstName}", "Details", "Clients", new {id = client.ClientId})</li>
      }
    </ul>
  }

  <P>@Html.ActionLink("Edit Stylist", "Edit", new{ id = Model.StylistId} )</P>
  <p>@Html.ActionLink("Back to list", "Index")</p>
</div>