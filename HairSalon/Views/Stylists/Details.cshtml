@{
  Layout= "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<div class="container">
  <h2>Stylist Details</h2>
  <hr />
  <h3>Name: @Html.DisplayFor(model => model.LastName), @Html.DisplayFor(model => model.FirstName)</h3>

  <h3>Phone Number: @Html.DisplayFor(model => model.PhoneNumber)</h3>

  <h3>Specialty: @Html.DisplayFor(model => model.Specialty)</h3>

  @if (@Model.Clients.Count == 0)
  {
    <h3>No clients have been added for this stylist yet!</h3>
  }
  else
  {
    <h3>Clients:</h3>
    <ul>
      @foreach (Client client in Model.Clients)
      {
        <li>@Html.ActionLink($"{client.LastName}, {client.FirstName}", "Details", "Clients", new {id = client.ClientId})</li>
      }
    </ul>
  }

  <br>
  <p>@Html.ActionLink("Add new Client", "Create", "Clients")</p>
  <P>@Html.ActionLink("Edit stylist", "Edit", new{ id = Model.StylistId} )</P>
  <P>@Html.ActionLink("Delete stylist", "Delete", new { id = Model.StylistId})</P>
  <p>@Html.ActionLink("Back to list", "Index")</p>
</div>