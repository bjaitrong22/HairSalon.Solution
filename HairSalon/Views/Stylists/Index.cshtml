@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="container">
  <h1>Stylists</h1>

  @if (@Model.Count == 0)
  {
    <h3>No stylists have been added yet.</h3>
  }
  else
  {
    <u>
      @foreach(Stylist stylist in Model)
      {
        <li>@Html.ActionLink($"{stylist.FirstName}", "Details", new { id = stylist.StylistId})</li>
      }
    </u>
  }
  
  <br>
  <p>@Html.ActionLink("Add new stylist", "Create")</p>
  <p>@Html.ActionLink("Add new Client", "Create", "Clients")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>
